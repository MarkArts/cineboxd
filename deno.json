{
    "nodeModulesDir": "auto",
    "unstable": [
        "unsafe-proto",
        "sloppy-imports",
        "kv"
    ],
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "strict": true,
        "jsx": "preserve"
    },
    "tasks": {
        "dev": "deno run -A --unstable-detect-cjs npm:next@latest dev",
        "build": "NODE_OPTIONS='--max-old-space-size=4096' deno run -A --unstable-detect-cjs npm:next@latest build",
        "start": "deno run -A --unstable-detect-cjs npm:next@latest start"
    }
}
